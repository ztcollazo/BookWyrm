<%= provide :title, "#{@user.username} (#{@user.first_name} #{@user.last_name})" %>

<div class="m-auto flex justify-around items-start">
  <%= gravatar_for @user, size: 128 %>
  <div class="flex flex-col w-full m-4 p-4 gap-4">
    <h1 class="text-3xl font-bold w-max"><%= @user.first_name %> <%= @user.last_name %></h1>
    <h3 class="text-lg text-gray-500 w-max">@<%= @user.username %></h3>
  </div>
  <div class="p-5 w-max">
    <h1 class="text-4xl font-bold">Books Reviewed</h1>
    <div class="flex flex-col gap-5 justify-around items-center">
      <% @user.reviews.each do |review| %>
        <%= render review.book %>
      <% end %>
    </div>
  </div>
</div>
