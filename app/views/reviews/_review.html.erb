<div class="flex flex-col p-5 gap-5 h-full w-full items-stretch rounded-md shadow-md">
  <div class="flex flex-col justify-between gap-5">
    <div class="flex justify-between w-full md:flex-nowrap flex-wrap-reverse">
      <h1 class="text-2xl text-left"><%= review.title %></h1>
      <div class="flex justify-around scale-50 md:scale-100 gap-2">
        <span style="background-color: <%= review.rating >= 1 ? 'gold' : 'lightgray' %>; width: 2rem; height: 2rem; clip-path: polygon(50% 0%, 61% 35%, 98% 35%, 68% 57%, 79% 91%, 50% 70%, 21% 91%, 32% 57%, 2% 35%, 39% 35%);"></span>
        <span style="background-color: <%= review.rating >= 2 ? 'gold' : 'lightgray' %>; width: 2rem; height: 2rem; clip-path: polygon(50% 0%, 61% 35%, 98% 35%, 68% 57%, 79% 91%, 50% 70%, 21% 91%, 32% 57%, 2% 35%, 39% 35%);"></span>
        <span style="background-color: <%= review.rating >= 3 ? 'gold' : 'lightgray' %>; width: 2rem; height: 2rem; clip-path: polygon(50% 0%, 61% 35%, 98% 35%, 68% 57%, 79% 91%, 50% 70%, 21% 91%, 32% 57%, 2% 35%, 39% 35%);"></span>
        <span style="background-color: <%= review.rating >= 4 ? 'gold' : 'lightgray' %>; width: 2rem; height: 2rem; clip-path: polygon(50% 0%, 61% 35%, 98% 35%, 68% 57%, 79% 91%, 50% 70%, 21% 91%, 32% 57%, 2% 35%, 39% 35%);"></span>
        <span style="background-color: <%= review.rating >= 5 ? 'gold' : 'lightgray' %>; width: 2rem; height: 2rem; clip-path: polygon(50% 0%, 61% 35%, 98% 35%, 68% 57%, 79% 91%, 50% 70%, 21% 91%, 32% 57%, 2% 35%, 39% 35%);"></span>
      </div>
    </div>
    <%= raw markdown review.content %>
  </div>
  <div class="flex flex-row flex-wrap md:flex-nowrap gap-5 justify-center md:justify-between items-center">
    <div class="flex flex-row gap-5 items-center">
      <%= gravatar_for review.user, size: 24 %>
      <a href="<%= user_path review.user.username %>" class="text-primary hover-underline"><%= review.user.first_name %>&nbsp;<%= review.user.last_name %></a>
    </div>
    <% if review.user == current_user %>
      <div class="flex justify-around w-max gap-5">
        <a href="<%= edit_book_review_path @book, review %>">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
          </svg>
        </a>
        <a data-confirm="Are you sure that you want to delete this review?" data-method="delete" href="/books/<%= @book.isbn_13 %>/reviews/<%= review.id %>/delete">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
          </svg>
        </a>
      </div>
    <% end %>
  </div>
</div>