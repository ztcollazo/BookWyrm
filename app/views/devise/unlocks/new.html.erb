<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
  <h1 class="text-4xl m-4 text-center"></h1>

  <div class="md:w-3/4 m-auto">
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field mb-4 p-2 w-full">
      <%= f.label :email, class: "font-bold inline-block mb-2" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full" %>
    </div>

    <div class="actions mb-4 p-2 w-full">
      <%= f.submit "Resend unlock instructions", class: "btn btn-primary w-full" %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
