<h1 class="text-4xl text-center m-4">Forgot your password?</h1>
<div class="md:w-3/4 m-auto">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field mb-4 w-full p-2">
      <%= f.label :email, class: 'mb-2 font-bold inline-block' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-full' %>
    </div>

    <div class="actions">
      <%= f.submit "Send me reset password instructions", class: 'btn btn-primary w-full' %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
