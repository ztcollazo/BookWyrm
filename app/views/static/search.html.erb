<div class="md:w-3/4 w-full flex flex-col justify-between m-auto gap-5">
  <h1 class="md:text-4xl text-3xl text-center md:text-left font-bold">Search results for: <%= params[:q] %></h1>
  <div class="flex flex-col items-center gap-5">
    <% @results.each do |res| %>
      <%= render res, link: true %>
    <% end %>
    <a class="text-primary self-center text-center hover-underline text-md" href="<%= new_book_path %>">Add a book to Bookwyrm</a>
  </div>
</div>